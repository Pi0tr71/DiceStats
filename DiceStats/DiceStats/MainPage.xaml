<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceStats.MainPage"
             xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms">

    <StackLayout>
        <ScrollView>
            <StackLayout>
                <Label x:Name="Dice" FontSize="50" HorizontalOptions="Center" Text="Wylosuj liczbe"></Label>
                <Button FontSize="40" Text="Losuj" Clicked="Button_Clicked"></Button>
                <microcharts:ChartView x:Name="chartViewBar" HeightRequest="300" />
                <microcharts:ChartView x:Name="chartViewPie" HeightRequest="300" />
            </StackLayout>
        </ScrollView>
    </StackLayout>

</ContentPage>
